@model LoginUserModel
@{
    ViewData["Title"] = "Login";
}
<form method="post" asp-action="Login"> 

    <div asp-validation-summary="All" >
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input  asp-for="UserName" class="form-control" />
        <label class="form-label" asp-for="UserName">UserName</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <input type="password" asp-for="Password" class="form-control" />
        <label class="form-label" asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-outline mb-4">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label" class="form-label" asp-for="RememberMe">Remember me</label>
    </div>

   
    <!-- Submit button -->

            <input type="submit" value="Sign in" class="btn btn-primary btn-block mb-4"  />
        

       
    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a asp-controller="Account" asp-action="Register">Register</a></p>
        
    </div>
    </div>
</form>

